<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-12 my-3">
      <h1 class="text-center">Academify</h1>
      <p class="text-center lead">Alunos cadastrados</p>

      <%- include('includes/messages') %>

      <% if(alunos.length > 0) { %>
      <div class="responsive-table">
        <table class="table my-3">
          <% alunos.forEach(aluno => { %>
          <tr>
            <td><%= aluno.matricula %></td>
            <td><%= aluno.nome %></td>
            <td><%= aluno.email %></td>
            <td><%= aluno.telefone %></td>
            <td><a href="/aluno/index/<%= aluno._id %>">Editar</a></td>
            <td><a class="text-danger" href="/aluno/delete/<%= aluno._id %>">Excluir</a></td>
          </tr>
          <% }); %>
        </table>
      </div>
      <% } else { %>
        <p class="text-center lead">NÃ£o existem alunos cadastrados.</p>
      <% } %>

    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
