<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">

      <h1 class="text-center">Turma</h1>
      <p class="text-center lead">Crie ou edite a turma abaixo.</p>

      <%- include('includes/messages') %>

      <% if(turma._id) { %>
      <form action="/turma/edit/<%= turma._id %>" method="POST">
      <% } else { %>
      <form action="/turma/register" method="POST">
      <% } %>
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <div class="form-group">
          <label>Rótulo</label>
          <input value="<%= turma.rotulo %>" type="text" class="form-control" name="rotulo">
        </div>
        <div class="form-group">
          <label>Periodo</label>
          <input value="<%= turma.periodo %>" type="text" class="form-control" name="periodo">
        </div>
        <div class="form-group">
          <label>Professor Responsável</label>
          <select class="form-control" name="professor">
            <% professores.forEach(function(professor) { %>
              <option value="<%= professor %>"><%= professor %></option>
            <% }); %>
          </select>
        </div>
        <div class="form-group">
          <label>Alunos Matriculados</label>
          <select multiple class="form-control" name="alunos">
            <% alunos.forEach(function(aluno) { %>
              <option value="<%= aluno.nome %>"><%= aluno.nome %></option>
            <% }); %>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>

    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
